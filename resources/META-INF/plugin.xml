<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>Bridge to Kubernetes</name>
  <version>1.0</version>
  <vendor email="heian0224@gmail.com" url="https://liucongblog.com">Liu Cong</vendor>

  <description><![CDATA[ An IDEA plugin for bridge to kubernetes, simplify development in kubernetes ]]></description>

  <change-notes><![CDATA[ init release]]>
  </change-notes>

  <!-- please see https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="BridgeToKubernetesID" class="com.liucongblog.bridgetokubernetes.BridgeAction"
            text="Bridge To Kubernetes" description="Bridge your local service to your kubernetes cluster.">
      <add-to-group group-id="EditMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>